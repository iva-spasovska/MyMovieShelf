@model MyMovieShelf.Domain.DomainModels.Shelf

@{
    ViewData["Title"] = "My Shelf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4 text-light">
    <h1>My Shelf</h1>
    <form method="get" asp-controller="Shelves" asp-action="Search" class="d-flex">
        <input type="text" name="query" class="form-control me-2" placeholder="Search movies..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

@if (Model.ShelfMovies != null && Model.ShelfMovies.Any())
{
    <div class="container">
    <div class="row">
        @foreach (var sm in Model.ShelfMovies)
        {
            var movie = sm.Movie;
            if (movie == null) continue; // safety check

            <div class="col-2 mb-4">
                <a asp-controller="Shelves" asp-action="Details" asp-route-id="@movie.Id" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm movie-card">
                        @if (!string.IsNullOrWhiteSpace(movie.PosterUrl))
                        {
                            <img src="@movie.PosterUrl" class="poster" alt="@movie.Title" />
                        }
                        else
                        {
                                <div class="poster-fallback">
                                    <span>@movie.Title</span>
                                </div>
                            }

                        <div class="card-body text-center">
                            <h5 class="card-title">@movie.Title</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    </div>
}
else
{
    <h5 class="text-light">Your shelf is empty. Add some movies!</h5>
}