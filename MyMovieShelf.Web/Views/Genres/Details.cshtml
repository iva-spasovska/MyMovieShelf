@model MyMovieShelf.Domain.DomainModels.Genre

@{
    ViewData["Title"] = "Genre Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var movies = ViewData["Movies"] as List<MyMovieShelf.Domain.DomainModels.Movie>;
}

<div class="text-light">

    <h1 class="mb-4">@Model.Name</h1>

@* <hr /> *@

@if (movies != null && movies.Any())
{
    <div class="container">
    <div class="row">
        @foreach (var movie in movies)
        {
            <div class="col-2 mb-4">
                <a asp-controller="Shelves" asp-action="Details" asp-route-id="@movie.Id" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm movie-card">
                        @if (!string.IsNullOrWhiteSpace(movie.PosterUrl))
                        {
                            <img src="@movie.PosterUrl" class="poster" alt="@movie.Title" />
                        }
                        else
                        {
                            <div class="poster-fallback">
                                <span>@movie.Title</span>
                            </div>
                        }

                        <div class="card-body text-center">
                            <h5 class="card-title">@movie.Title</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    </div>
}
else
{
    <p>There are no movies in this genre yet.</p>
}

<div class="mt-3 d-flex justify-content-end">
    <a asp-controller="Shelves" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
</div>