@model IEnumerable<MyMovieShelf.Domain.DomainModels.Review>

@{
    ViewData["Title"] = "My Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-light">
    <h1 class="mb-4">My Reviews</h1>

    @if (Model != null && Model.Any())
    {
        <ul class="list-group">
            @foreach (var review in Model)
            {
                <li class="list-group-item bg-light text-dark rounded-4 mb-2 shadow-sm">
                    <div class="d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="mb-0">
                                You rated
                                <a asp-controller="Shelves" asp-action="Details" asp-route-id="@review.Movie.Id"
                                   class="text-decoration-none fw-bold text-primary">
                                    @review.Movie?.Title
                                </a>
                                <span class="text-dark fw-semibold">@review.Rating/10</span>
                            </h5>
                            <small class="text-muted">@review.CreatedAt.ToString("dd.MM.yyyy")</small>
                        </div>

                        <div class="d-flex justify-content-between align-items-end flex-wrap">
                            <p class="mb-0 me-3 flex-grow-1" style="max-width:85%;">
                                @review.Comment
                            </p>

                            @if (User.Identity.IsAuthenticated &&
                                                review.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                            {
                                <div class="d-flex gap-2">
                                    <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.Id"
                                       class="btn btn-sm btn-primary px-3">Edit</a>
                                    <form asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.Id"
                                          method="post" style="display:inline"
                                          onsubmit="return confirm('Are you sure you want to delete this review?');">
                                        <button type="submit" class="btn btn-sm btn-danger px-3">Delete</button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-light">You haven’t left any reviews yet.</p>
    }
</div>
