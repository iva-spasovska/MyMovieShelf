@model IEnumerable<MyMovieShelf.Domain.DTO.MovieSearchResultDTO>

@{
    ViewData["Title"] = "Featured Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4 text-light">
    <h1>Featured Movies</h1>
    <form method="get" asp-controller="Shelves" asp-action="Search" class="d-flex">
        <input type="text" name="query" class="form-control me-2" placeholder="Search movies..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

@if (Model != null && Model.Any())
{
    <div class="container">
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-2 mb-4">
                    <a asp-controller="Shelves" asp-action="TmdbDetails" asp-route-tmdbId="@movie.TmdbId" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm movie-card">
                            @if (!string.IsNullOrWhiteSpace(movie.PosterPath))
                            {
                                <img src="@movie.PosterPath" class="poster" alt="@movie.Title" />
                            }
                            else
                            {
                                <div class="poster-fallback">
                                    <span>@movie.Title</span>
                                </div>
                            }

                            <div class="card-body text-center">
                                <h5 class="card-title">@movie.Title</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>No featured movies available right now.</p>
}

